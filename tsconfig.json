{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "declaration": true,
      "declarationDir": "./dist",      
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "jsxImportSource": "@emotion/react"
    },
    "include": ["src"],
    "exclude": ["**/*.stories.tsx"]
  }